<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper>


<select id="selectDrinkList"
            parameterType="Criteria"
            resultType="DrinkVO">

	SELECT * FROM FOOD_COLUMNS
	WHERE COLUMN_TITLE LIKE '%' || #{searchKeyword} ||'%'
	OFFSET #{firstIndex} ROWS
	FETCH NEXT #{pageUnit} ROWS ONLY
</select>


<select id="selectDrinkListTotCnt"
             parameterType="Criteria"
             resultType="int"
             >
	SELECT COUNT (*) FROM FOOD_COLUMNS
	WHERE COLUMN_TITLE LIKE '%' ||#{searchKeyword}|| '%'
     </select>


<insert id="insert"
            parameterType="DrinkVO">
   INSERT INTO FOOD_COLUMNS(COLUMN_ID,USER_ID,COLUMN_TITLE,COLUMN_CONTENT,COLUMN_CATEGORY,COLUMN_CREATED_AT,COLUMN_URL)
	VALUES(#{column_id},#{user_id},#{column_title},#{column_content},#{column_category},
    TO_CHAR(SYSDATE,'YYYY-MM-DD HH24:MI:SS'),#{column_url})
   
   </insert>

<select id="selectDrink"
            parameterType="String"
            resultType="DrinkVO" >

	SELECT * FROM FOOD_COLUMNS
	WHERE COLUMN_ID=#{column_id}
    </select>


<delete id="delete"
            parameterType="DrinkVO">
	DELETE TB_FILE_DB
	WHERE UUID=#{uuid}
    
    </delete>














</mapper>